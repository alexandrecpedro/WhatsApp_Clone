<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WppClone" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.WppClone.NoActionBar" parent="Theme.WppClone">
        <item name="windowActionBar">false</item>

        <item name="windowNoTitle">true</item>
    </style>

    <style name="ChatBackground" parent="Theme.WppClone.NoActionBar">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowBackground">@drawable/wpp_default_bg</item>
    </style>

</resources>